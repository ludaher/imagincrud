@model ImaginCrud.Models.SearchModel<ImaginCrud.Models.AssignUser>

<table class="table table-hover">
    <tr>
        <th>
            Nombre de usuario
        </th>
        <th>
            Correo electrónico
        </th>
        <th style="width: 100px;">Digitador</th>
        <th style="width: 100px;">Validador</th>
    </tr>

    @foreach (var item in Model.ListData)
    {
        <tr>
            <td data-toggle="tooltip" data-container="body" data-placement="top" title="Nombre">
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td data-toggle="tooltip" data-container="body" data-placement="top" title="Descripción">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td data-toggle="tooltip" data-container="body" data-placement="top" title="Digitador">
                @if (Roles.IsUserInRole(item.UserName, ImaginCrud.Entities.Constants.TYPIST_ROLE))
                {
                    <input type="checkbox" ng-click="clickTyper('@item.UserName')" @(item.IsTypist ? "checked" : "") />
                }
            </td>
            <td data-toggle="tooltip" data-container="body" data-placement="top" title="Validador">
                @if (Roles.IsUserInRole(item.UserName, ImaginCrud.Entities.Constants.VALIDATOR_ROLE))
                {
                    <input type="checkbox" ng-click="clickValidator('@item.UserName')" @(item.IsValidator ? "checked" : "") />
                }
            </td>
        </tr>
    }
</table>
