@model ImaginCrud.Models.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr>
<h2 class="intro-text text-center">
    <strong>Cambio de contraseña</strong>
</h2>
<hr>

<div ng-app="Form" class="container">
    <div class="row" ng-controller="FormController" novalidate>
        <form action="~/Account/ChangePassword" method="post" name="form">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-tasks"></i> Cambio de contraseña</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="OldPassword">Contraseña anterior</label>
                                <input type="text" class="form-control" name="OldPassword" placeholder="Contraseña anterior" ng-model="OldPassword" required />
                                <span ng-show="!form.OldPassword.$valid && form.OldPassword.$touched" class="error">La contraseña anterior es obligatoria.</span>
                            </div>
                        </div>
                        <div class="col-md-6">

                            <div class="form-group">
                                <label for="NewPassword">Nueva contraseña</label>
                                <input type="text" class="form-control" name="NewPassword" placeholder="Nueva contraseña" ng-model="NewPassword" required />
                                <span ng-show="!form.NewPassword.$valid && form.NewPassword.$touched" class="error">La nueva contraseña es obligatoria.</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="ConfirmPassword">Confirmación  de contraseña</label>
                                <input type="text" class="form-control" name="ConfirmPassword" placeholder="Confirmación de contraseña" ng-model="ConfirmPassword" required />
                                <span ng-show="!form.ConfirmPassword.$valid && form.ConfirmPassword.$touched" class="error">La confirmación de contraseña es obligatoria.</span>
                            </div>

                        </div>
                    </div>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <button type="submit" class="btn btn-success navbar-btn" ng-disabled="form.$invalid">Cambiar contraseña</button>
                        </li>
                    </ul>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/App/Controllers/RegisterUserController.js"></script>
}
