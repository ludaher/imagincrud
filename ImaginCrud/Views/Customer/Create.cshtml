@model ImaginCrud.Entities.Customer
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr>
<h2 class="intro-text text-center">
    <strong>Clientes</strong>
</h2>
<hr>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        <strong>Error!</strong> @ViewBag.Error
    </div>
}
@if (ViewBag.Warning != null)
{
    <div class="alert alert-warning">
        <strong>Alerta!</strong> @ViewBag.Warning
    </div>
}
@if (Model != null)
{
    <div ng-app="Form" class="container">
        <div class="row" ng-controller="FormController" novalidate>
            <form action="~/Customer/Create" method="post" name="form">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-tasks"></i> Registrar cliente</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="CustomerId">Identificación</label>
                                    <input type="number" class="form-control" name="CustomerId" placeholder="Identificación" maxlength="11" required value="@Model.CustomerId" ng-model="CustomerId" />
                                    <span ng-show="!form.CustomerId.$valid && form.CustomerId.$touched" class="error">La identificación del cliente es requerido.</span>
                                </div>
                                <div class="form-group">
                                    <label for="Name">Nombre</label>
                                    <input type="text" class="form-control" name="Name" placeholder="Nombre del cliente" maxlength="100" required value="@Model.Name"  ng-model="Name" />
                                    <span ng-show="form.Name.$error.required && form.Name.$touched" class="error">El nombre del cliente es requerido.</span>
                                </div>
                                <div class="form-group">
                                    <label for="Phone">Teléfono</label>
                                    <input type="text" class="form-control" name="Phone" placeholder="Teléfono" maxlength="50" value="@Model.Phone"  ng-model="Phone" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Address">Dirección</label>
                                    <input type="text" class="form-control" name="Address" placeholder="Dirección" maxlength="50" value="@Model.Address"  ng-model="Address" />
                                </div>

                                <div class="form-group">
                                    <label for="Description">Descripción</label>
                                    <textarea class="form-control" name="Description" placeholder="Descripción" maxlength="150" ng-model="Description" > @Model.Description</textarea>
                                    @*<input type="text" class="form-control" name="Description" placeholder="Descripción" ng-model="Description"  maxlength="150"/>*@
                                </div>
                            </div>
                        </div>
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <button type="submit" class="btn btn-success navbar-btn" ng-disabled="form.$invalid">Guardar</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Ver lista", "Index", "Customer")
</div>
@section Scripts {
    <script src="~/Scripts/App/Controllers/RegisterUserController.js"></script>
}
